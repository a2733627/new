---
/**
 * This section is for adding your social media links.
 *
 * 1. Add your social media links: Replace 'xxx' with your username for each social media platform.
 * 2. Add more links: If you want to include more social media platforms, replicate the existing pattern and update the `Type` enum accordingly.
 * 3. Adjust the order: You can change the order of the social media icons by rearranging the objects.
 * 4. Customize icon colors: To change the color of the icons, refer to the Tailwind CSS color classes. Visit: https://tailwindcss.com/docs/customizing-colors
 *
 */

enum Type {
	Reddit = 'Reddit',
	Discord = 'Discord',
	Threads = 'Threads',
	instagram = 'Instagram',
	email = 'Email',
	// titok = 'TikTok',
}

const socials = [
	{
		name: Type.Threads,
		url: 'https://www.threads.net/@rh.flux',
		icon: 'assets/svg/icons/threads.svg',
		color: 'bg-white-800',
	},
	{
		name: Type.Discord,
		url: 'http://discordapp.com/users/avoidatallcosttt',
		icon: 'assets/svg/icons/discord.svg',
		color: 'bg-cyan-500',
	},
	{
		name: Type.instagram,
		url: 'https://www.instagram.com/rh.flux/',
		icon: 'assets/svg/icons/instagram.svg',
		color: 'bg-yellow-400',
	},
	// {
	// 	name: Type.email,
	// 	url: 'rollhaber@gmail.com',
	// 	icon: 'assets/svg/icons/email.svg',
	// 	color: 'bg-lime-400',
	// },
	{
		name: Type.Reddit,
		url: 'https://www.reddit.com/user/LeRohameaux/',
		icon: 'assets/svg/icons/linkedin.svg',
		color: 'bg-sky-700',
	},
	// {
	// 	name: Type.titok,
	// 	url: 'https://www.tiktok.com/xxx',
	// 	icon: 'assets/svg/icons/tiktok.svg',
	// 	color: 'bg-pink-400',
	// },
];

const getColor = (type: Type) => socials.find((social) => social.name === type)?.color;
const getClass = (type: Type) =>
	`scale-100 rounded-full border-2 border-gray-950 ${getColor(
		type,
	)} transition duration-300 hover:scale-110 animate-zoom-in`;
---

<div class="grid grid-cols-3 gap-3 duration-500 md:grid-flow-col md:gap-2">
	{
		socials.map((social) => {
			const href = social.name === Type.email ? `mailto:${social.url}` : social.url;
			return (
				<a
					aria-label={social.name}
					class={getClass(social.name)}
					href={href}
					target="_blank"
					rel="nofollow noopner"
				>
					<img class="size-14 p-3 md:size-16" src={social.icon} alt={social.name} />
				</a>
			);
		})
	}
</div>
